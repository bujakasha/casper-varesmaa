
server {
       listen 80;
       listen [::]:80 default_server ipv6only=on;
       server_name caspervaresmaa.fi www.caspervaresmaa.fi;
       return 301 https://caspervaresmaa.fi$request_uri;
}

server {
    listen 443 default_server;
    listen [::]:443 default_server;


    ssl on;
    ssl_certificate  /etc/letsencrypt/live/caspervaresmaa.fi/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/caspervaresmaa.fi/privkey.pem;

    root /var/www/caspervaresmaa.fi/public;
    index index.html index.htm index.nginx-debian.html;
    server_name caspervaresmaa.fi www.caspervaresmaa.fi;


    location / {
         try_files $uri $uri/ =404;
    }
}
